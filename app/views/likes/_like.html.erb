<% if user_signed_in? %>
  <% if bookshop.like_user(current_user.id) %>
    <%= button_to bookshop_like_path(like, bookshop_id: bookshop.id), method: :delete, id: "like-button", remote: true do %>
      <%= image_tag("icon_red_heart.svg") %>
      <span>
        <%= bookshop.like_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to bookshop_likes_path(tweet), id: "like-button", remote: true do %>
      <%= image_tag("icon_heart.svg") %>
      <span>
        <%= bookshop.like_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  <% = image_tag("icon_heart.svg") %>
    <span>
      <%= bookshop.like_count %>
    </span>
<% end %>