<% provide(:title, '書店情報編集') %>
<h1>書店情報編集</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@bookshop) do |f| %>

      <%= f.label :name %><br />
      <%= f.text_field :name %><br />

      <%= f.label :phone %><br />
      <%= f.text_field :phone %><br />

      <%= f.label :image_data %><br />
      <%= f.file_field :image_data, accept: 'image/jpeg,image/gif,image/png' %><br />

      <%= f.label :address %><br />
      <%= f.text_field :address %><br />

      <%= f.label :area %><br />
      <%= f.text_field :area %><br />

      <%= f.label :station %><br />
      <%= f.text_field :station %><br />

      <%= f.label :url %><br />
      <%= f.text_field :url %><br />

      <%= f.label :twitter_url %><br />
      <%= f.text_field :twitter_url %><br />
      
      <%= f.label :google_map_url %><br />
      <%= f.text_field :google_map_url %><br />
      
      <%= f.label :business_hour %><br />
      <%= f.text_field :business_hour %><br />
      
      <%= f.label :holiday %><br />
      <%= f.text_field :holiday %><br />
            
      <%= f.label :access %><br />
      <%= f.text_field :access %><br />
            
      <%= f.submit "これで登録", class: "btn btn-primary" %><br />
    <% end %>
  </div>
</div> 